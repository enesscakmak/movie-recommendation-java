      <Label layoutX="170.0" layoutY="46.0" stylesheets="@styles.css" text="Username">
         <font>
            <Font name="Cambria Math" size="14.0" />
         </font>
      </Label>
      <Label layoutX="170.0" layoutY="138.0" text="Password">
         <font>
            <Font name="Cambria Math" size="14.0" />
         </font>
      </Label>
      <Hyperlink fx:id="DontHaveAccount" layoutX="226.0" layoutY="279.0" onAction="#register" text="Don't have an account?">
         <font>
            <Font name="Cambria Math" size="14.0" />
         </font>
      </Hyperlink>
      <Hyperlink fx:id="Register" layoutX="270.0" layoutY="301.0" onAction="#register" text="Register">
         <font>
            <Font name="Cambria Math" size="14.0" />
